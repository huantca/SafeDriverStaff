<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/navi1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/top_trending"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvViewAll"
                style="@style/NormalTextButton2Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:text="@string/view_all"
                android:textColor="@color/secondaryInforC" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sample1"
                style="@style/normal_iv"
                android:layout_width="80dp"
                android:layout_height="119dp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sample2"
                style="@style/normal_iv"
                android:layout_width="80dp"
                android:layout_height="119dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/sample1" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sample3"
                style="@style/normal_iv"
                android:layout_width="80dp"
                android:layout_height="119dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/sample2" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sample4"
                style="@style/normal_iv"
                android:layout_width="80dp"
                android:layout_height="119dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/sample3" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sample5"
                style="@style/normal_iv"
                android:layout_width="80dp"
                android:layout_height="119dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/sample4" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/latest"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sample6"
                    style="@style/normal_iv"
                    android:layout_width="104dp"
                    android:layout_height="166dp" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sample7"
                    style="@style/normal_iv"
                    android:layout_width="104dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/sample6" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sample8"
                    style="@style/normal_iv"
                    android:layout_width="104dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/sample7" />
            </RelativeLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp">

                <include layout="@layout/native_onboarding" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sample10"
                    style="@style/normal_iv"
                    android:layout_width="104dp"
                    android:layout_height="166dp" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sample11"
                    style="@style/normal_iv"
                    android:layout_width="104dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/sample10" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sample12"
                    style="@style/normal_iv"
                    android:layout_width="104dp"
                    android:layout_height="166dp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/sample11" />
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</layout>
