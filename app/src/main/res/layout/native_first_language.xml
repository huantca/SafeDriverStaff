<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_8"
    android:backgroundTint="@color/dark2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_ad"
            android:backgroundTint="@color/Primary100"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:text="Ad"
            android:textColor="@color/white"
            android:textSize="8sp"
            tools:ignore="SmallSp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:textColor="@color/Primary100"
                    android:textFontWeight="500"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="StreamYard is a live streaming studio" />

                <TextView
                    android:id="@+id/ad_advertiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.8"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:lines="2"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="The easiest way to create professional livestream. Get started today. " />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/ad_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alpha="0.8"
            android:ellipsize="end"
            android:maxLines="3"
            android:lines="3"
            android:layout_marginHorizontal="12dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="@tools:sample/lorem/random" />

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ad_call_to_action"
            style="@style/NativeFullWidthCTA"
            tools:text="CTA" />

    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>
