<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="12dp"
        android:clipToOutline="true"
        android:background="@drawable/bg_radius_12"
        android:layout_height="100dp"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/image"
            tools:src="@tools:sample/backgrounds/scenic"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:alpha="0.94"
            android:background="@drawable/bg_item_welcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/selected_view"
            android:background="@drawable/bg_selected_item_welcome"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/name"
            android:layout_alignParentBottom="true"
            tools:text="@tools:sample/cities"
            android:textColor="@color/white"
            android:layout_margin="12dp"
            android:fontFamily="@font/roboto_medium"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_welcome_checkbox_unchecked" />
    </RelativeLayout>
</layout>
